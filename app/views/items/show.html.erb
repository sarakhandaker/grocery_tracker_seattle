<h1> <%=@item.name%> </h1> 
<h2> Category: <%=@item.category%></h2>
<h2> Avaliable at:</h2>
<div class="row">
<% @stores.each do |store| %>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%=store.chain%></h5>
    <%if current_user %>
    <p class="card-text"><%="#{store.distance_to(current_user).round(2)} miles away from you"%></p>
       <%end%>
     </h3><%=link_to store.address, grocery_store_path(store)%><br/></h3>
  </div>
</div>
<%end%>
</div>