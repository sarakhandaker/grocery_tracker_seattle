<h1> The visit date you got sick: </h1>

<div class="covid_form">
<%= form_for @user, as: :user, url: "/users/#{@user.id}/covid_notify", method: :patch do |f| %><br/>
<%= f.collection_select :visit_ids, @user.visits_dates, :id, :date_formated  %><br/><br/>
  <%= f.submit "Notify Others" %><br/>
<% end %>
</div>

