<h1> Welcome! </h1>
<h2> Fill in your Login Information or Signup </h2>
<%= form_for :session, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Login" %>
<% end %> <br/>

<%=link_to "Signup", signup_path%>
